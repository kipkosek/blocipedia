<div>
  <h1>
    <%= @wiki.title %> <br>
    <small>
      created by <%= @wiki.user.username %>
    </small>
  </h1>
</div>
<% if @wiki.private == true %>
  <div class="text-warning">
    Private
  </div>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% if policy(@wiki).destroy? %>
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"} %>
    <% end %>
  </div>
  <div class="col-md-2 top-buffer">
    <%= link_to "View All Wikis", wikis_path, class: 'btn btn-info' %>
  </div>
</div>
